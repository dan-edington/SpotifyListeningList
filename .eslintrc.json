{
    "env": {
      "browser": true
    },
    "extends": "airbnb-base",
    "plugins": [
        "import",
        "react"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
          "jsx": true
      }
    },
    "rules": {
      "linebreak-style": ["off"],
      "padded-blocks": ["error", "always"],
      "func-names": ["error", "never"],
      "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
      "no-unneeded-ternary": ["off"],
      "class-methods-use-this": ["off"]
    }
}